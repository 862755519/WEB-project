/* pages/demo/demo.wxss */

@import '../liba/iconfont.wxss';
@import '../liba/weiui.wxss';  

.wrapper {
  padding: 5px;
}
.title{
  padding: 30rpx;
  background-color: #fff;
}
.bianji_icon{
  text-align: center;
  background: rgb(124, 236, 218);
}
.iconfont {
  display: inline-block;
  padding: 8px 8px;
  width: 24px;
  height: 24px;
  cursor: pointer;
  font-size: 20px;
}
.text_img{
  border: 1px solid #F5F5F5;
  padding: 20rpx;
  border-radius: 5rpx;
  font-size: 30rpx;
  color: #999;
}
.text_img image{
  width: 100%;
  height: 300rpx;
}
.imgtitle{
  font-size: 30rpx;
  text-align: center;
}
.text_but{
  width: 90%;
  background: #2492F4;
  color: #fff;
  font-size: 35rpx;
  margin-top: 80rpx;
}

.toolbar {
  box-sizing: border-box;
  /* border: 1px solid #ccc; */
  border-bottom: 0;
  font-family: 'Helvetica Neue', 'Helvetica', 'Arial', sans-serif;
}

.ql-container {
  box-sizing: border-box;
  padding: 12px 15px;
  width: 90%;
  min-height: 30vh;
  height: auto;
  border: 1px solid #fff;
  background: #fff;
  margin: 60rpx auto;
  border-radius: 10rpx;
  font-size: 16px;
  line-height: 1.5;
}
page{
  background: #F5F5F5;
}
.ql-active {
  color: #06c;
}
