.form-box {
  height: auto;
  overflow: hidden;
  margin:0 70rpx;
  margin-top: 200rpx;
  border-radius: 30rpx;
  background: #fff;
  border:1px solid #fff;
  padding: 30rpx;
}
page{
  background: -webkit-gradient(linear, 0 0, 0 100%, from(#2492F4), to(#54bdcf));
}
.title_name{
  margin:40rpx 70rpx;
  /* border:1px solid #ccc; */
  font-size: 50rpx;
  text-align: center;
  font-family: 700;
  color: #fff;
}
.box{
  width: 100%;
  height: 60rpx;
  text-align: center;
}
.gettel{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  background-color: #2492F4;
  border-radius: 10rpx;
