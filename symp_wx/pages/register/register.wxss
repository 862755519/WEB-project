  border-bottom: #d9d9d9;
  padding-left: 30rpx;
}
.idea{
  color: #333;
  text-align: center;
  font-size: 35rpx;
}
.line{
  background: #d9d9d9;
  height: 1px;
}
.title_tran{
  text-align: center;
  margin:0 auto;
  width: 350rpx;
  height: 70rpx;
  line-height: 65rpx;
  font-size: 40rpx;
  border:1px solid #fff;
  border-radius: 50rpx;
  color: #fff;
}
.register{
  /* border: 1px solid green; */
  text-align: center;
  height: 45rpx;
  margin-top:20rpx;
}

.form-item {
  position: relative;
  background: #fff;
  height: 80rpx;
  border-bottom: 1px solid #d9d9d9;
}

.form-item .username, .form-item .password, .form-item .mobile, .form-item .code {
  position: absolute;
  top: 26rpx;
  left: 0;
  display: block;
  width: 100%;
  height: 44rpx;
  background: #fff;
  color: #333;
  font-size: 30rpx;
}

.form-item-code {
  height: 80rpx;
  overflow: hidden;
  /* width: 100%; */
  border-bottom: 1px solid #d9d9d9;
}

.form-item-code .form-item {
  float: left;
  width: 350rpx;
}

.form-item-code .code-btn {
  margin-top: 10rpx;
  float: right;
  width: 100px;
  height: 40rpx;
  padding: 10rpx 0rpx;
  text-align: center;
  font-size: 12px;
  /* border: 1px solid #d9d9d9; */
  border-radius: 40rpx;
  color: #333;
  background: #2492F4;
}
.code-btn{
  border: 1px solid red;
}

.yanzhenma{
  margin-left: 20rpx;
  text-align: center;
  margin-top: 20rpx;
  background-color: #2492F4;
  border-radius: 20rpx;
  color: #fff;
}

.form-item .clear {
  position: absolute;
  top: 26rpx;
  right: 18rpx;
  z-index: 2;
  display: block;
  background: #fff;
  height: 44rpx;
  width: 44rpx;
}

.register-btn {
  margin: 60rpx 0 40rpx 0;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  font-size: 30rpx;
  width: 100%;
  border-radius: 40rpx;
  background: #2492F4;
}
