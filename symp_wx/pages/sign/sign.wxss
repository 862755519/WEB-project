.calendar{
	width: 100%;
 
}
.calendar .tit{
	display: flex;
	justify-content: center;
	align-items: center;
	font-size: 36rpx;
	color: #2A2A2A;
	padding: 10rpx 0;
}
.calendar .tit .current{
	margin: 0 40rpx;
  font-size: 35rpx;
  
}
.calendar .content{
	display: flex;
	flex-wrap: wrap;
	box-sizing: border-box;
	padding-left: 25rpx;
  
}
.calendar .content view{
	width: 70rpx;
	height: 70rpx;
  margin-left: 27rpx;
	line-height: 70rpx;
	text-align: center;
	flex-shrink: 0;
	font-size: 30rpx;
	/* background: rgb(224, 199, 199); */
  margin-top: 15rpx;
  border-radius: 35rpx;
}
.calendar .content .gray{
	color: #999;
 
}
